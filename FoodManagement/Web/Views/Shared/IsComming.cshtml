
<section class="product_list best_seller section_padding">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <div class="section_tittle text-center">
                    <h2>Best Sellers <span>shop</span></h2>
                </div>
            </div>
        </div>
        <div class="row align-items-center justify-content-between">
            <div class="col-lg-12">
                <div class="best_product_slider owl-carousel IsComming">
                </div>
            </div>
        </div>
    </div>

<script>
        $(function () {
            $.getJSON("/Product/GetIsComming", {}, function (products) {
                products.forEach((product) => {
                    $(".IsComming").append(
                        '<div class="single_product_item">' +
                        '<img src="' + product.picture + '" alt="">' +
                        '<div class="single_product_text">' +
                        '<h4>' + product.title + '</h4>' +
                        '<h3>$150.00</h3>' +
                        '</div>' +
                        '</div>'
                    );
                });
                $(".IsComming").owlCarousel({
                    loop: true,
                    margin: 10,
                    nav: true,
                    responsive: {
                        0: {
                            items: 1
                        },
                        600: {
                            items: 3
                        },
                        1000: {
                            items: 5
                        }
                    }
                });
            });
        });

</script>
